{% extends 'base.html.twig' %}

{% block title %}Trajet index{% endblock %}

{% block body %}
    <h1>Trajet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>VilleA</th>
                <th>VilleD</th>
                <th>Conducteur</th>
                <th>DateTrajet</th>
                <th>NbrPlaces</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trajet in trajets %}
            <tr>
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.villeA }}</td>
                <td>{{ trajet.villeD }}</td>
                <td>{{ trajet.conducteur ? 'Yes' : 'No' }}</td>
                <td>{{ trajet.dateTrajet ? trajet.dateTrajet|date('Y-m-d') : '' }}</td>
                <td>{{ trajet.nbrPlaces }}</td>
                <td>
                    <a href="{{ path('app_trajet_show', {'id': trajet.id}) }}">show</a>
                    <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trajet_new') }}">Create new</a>
{% endblock %}
